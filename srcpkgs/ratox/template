post_patch() {
	sed -i config.mk \
		-e 's|^CFLAGS *=|override CFLAGS +=|g' \
		-e 's|^LDFLAGS *=|override LDFLAGS +=|g'
}

post_install() {
	vlicense LICENSE
}
