# Template file for 'runit-mdevd'
pkgname=runit-mdevd
version=20240412
revision=1
depends="runit-void mdevd mdev-conf"
short_desc="Runit stage 0 script and service for mdevd"
maintainer="hazen2215 <haz@disroot.org>"
license="Public Domain"
homepage="https://skarnet.org/software/mdevd/"
conflicts="eudev>=0"

do_install() {
	for f in ${FILESDIR}/*.sh; do
		vinstall $f 0644 etc/runit/core-services
	done
	vinstall ${FILESDIR}/brightnessctl.conf 0644 etc/mdev.d
	vsv mdevd
}
