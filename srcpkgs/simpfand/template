post_install() {
	vlicense LICENSE
	vsconf simpfand.conf
	vsv simpfand
	vmkdir /etc/zzz.d/resume
	vinstall ${FILESDIR}/50-simpfand.sh 755 /etc/zzz.d/resume
	rm -rf ${DESTDIR}/usr/share/doc
}
