bento4-devel_package() {
	short_desc+=" - development files"
	depends="${makedepends} ${sourcepkg}-${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.a"
		vmove usr/lib/cmake
	}
}
