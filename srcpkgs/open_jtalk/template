post_install() {
	vmkdir usr/share/open_jtalk
	mv ${DESTDIR}/usr/dic ${DESTDIR}/usr/share/open_jtalk/dic
	vlicense COPYING
	vlicense mecab-naist-jdic/COPYING COPYING-dic
}
